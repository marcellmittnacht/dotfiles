general {
        colors = true
        color_good = "#98971a"
        color_bad = "#cc241d"
        color_degraded = "#fabd2f"
        interval = 2
}

order += "volume master"
order += "disk /"
order += "disk /mnt/data"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "memory"
order += "tztime local"

tztime local {
        format = "%Y-%m-%d %H:%M"
}

cpu_temperature 0 {
        format = "CPU: %degrees Â°C"
        path = "/sys/class/hwmon/hwmon0/temp1_input"
}

