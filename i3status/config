general {
	output_format = "i3bar"
        colors = true
        color_good = "#50FA7B"
        color_bad = "#FF5555"
        color_degraded = "#F1FA8C"
        interval = 2
}

order += "volume master"
order += "disk /"
order += "disk /mnt/data"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "memory"
order += "tztime local"

tztime local {
        format = " %Y-%m-%d %H:%M"
}

cpu_temperature 0 {
        format = " : %degrees °C"
        path = "/sys/class/hwmon/hwmon0/temp1_input"
}

cpu_usage {
        format = " : %usage"
}

memory {
        format = "%used / %total"
}

disk "/" {
        format = " : %free"
}

disk "/mnt/data" {
        format = " : %free"
}

volume master {
        format = "  %volume"
}
