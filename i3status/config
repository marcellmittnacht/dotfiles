general {
        interval = 1
}

order += "volume master"
order += "disk /"
order += "disk /mnt/data"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "memory"
order += "tztime local"

tztime local {
        format = "%Y-%m-%d %H:%M"
}

cpu_temperature 0 {
        format = "CPU: %degrees °C"
        path = "/sys/class/hwmon/hwmon0/temp1_input"
}

cpu_usage {
        format = "CPU: %usage"
}

memory {
        format = "%used / %total"
}

disk "/" {
        format = "SSD: %free"
}

disk "/mnt/data" {
        format = "HDD: %free"
}

volume master {
        format = "♪: %volume"
}
